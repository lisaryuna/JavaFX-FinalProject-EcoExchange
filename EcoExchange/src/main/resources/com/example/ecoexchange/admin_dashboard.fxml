<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<BorderPane prefHeight="700.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ecoexchange.controller.AdminController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ecf0f1;">
            <Label text="ADMINISTRATOR PANEL" textFill="#c0392b">
                <font>
                    <Font name="System Bold" size="32.0" />
                </font>
            </Label>

            <Label fx:id="lblWelcome" text="Welcome, Admin">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Waste Price List (Click row to edit)" style="-fx-font-weight: bold;" />

                <TableView fx:id="tblWaste" prefHeight="250.0" prefWidth="500.0">
                    <columns>
                        <TableColumn fx:id="colName" text="Waste Category Name" />
                        <TableColumn fx:id="colPrice" text="Price / Kg (Rp)" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <VBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Edit Waste Price" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;"/>

                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <VBox>
                        <Label text="Category Name:"/>
                        <TextField fx:id="txtName" promptText="Input Name / Select"/>
                    </VBox>

                    <VBox>
                        <Label text="Price (Rp):"/>
                        <TextField fx:id="txtPrice" promptText="Enter price"/>
                    </VBox>

                    <Button onAction="#handleUpdate" text="Update Price"
                            style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                        <HBox.margin>
                            <Insets top="17.0"/>
                        </HBox.margin>
                    </Button>

                    <Button onAction="#handleAddWaste" text="+ Add New"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                        <HBox.margin>
                            <Insets top="17.0" />
                        </HBox.margin>
                    </Button>

                    <Button onAction="#handleDeleteWaste" text="Delete"
                            style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand">
                        <HBox.margin>
                            <Insets top="17.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>

            </VBox>

            <Button mnemonicParsing="false" onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 30;"
                    text="LOGOUT" />
        </VBox>
    </center>
</BorderPane>
